{{>layouts/header}}
{{#article}}
    <section>
        <div class="container mt-5 mb-5">
            <div class="card bg-light">
                <div class="card-header">
                    <h1 class="fw-bolder mb-1">{{title}}</h1>
                </div>
                <div class="card-body">
                    <!--content-->
                    <div class="mb-5">
                        {{contents}}
                    </div>
                </div>
                <div style="padding: 10px">
                    <div style="display: inline-block; float: left">
                        <a href="/articles/{{id}}/edit" class="btn btn-dark">Edit</a>
                        <a href="/articles/{{id}}/delete" class="btn btn-danger">Delete</a>
                    </div>
                    <div style="display: inline-block; float: right">
                        <a href="/articles/new" class="btn btn-secondary" >New Article</a>
                        <a href="/articles/list" class="btn btn-dark">Articles List</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Comment form-->
    <section class="container mb-5">
        <div class="card bg-light">
            <div class="card-header">
                <h4>Comments</h4>
            </div>
            <div class="card-body">
                <!-- ShowComment -->
                <div class="mt-2">
                    {{#savedComment}}
                        <div class="fw-bold">
                            {{author}}
                        </div>
                        <div>
                            <div >
                                <div>
                                    {{comment}}
                                </div>
                                <div>
                                    <a href="/articles/{{#article}}{{id}}{{/article}}/comments/delete/{{id}}" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    {{/savedComment}}
                </div>
            </div>
        </div>
    </section>
    <!-- NewComment form -->
    <section class="container mb-5">
        <div class="card bg-light">
            <div class="card-header">
                <h4>Comment</h4>
            </div>
            <div class="card-body">

                <form class="container" action="/articles/{{id}}/comments" method="post">
                    <div class="mb-3">
                        <label class="form-label">작성자</label>
                        <input type="text" placeholder="Author" class="form-control" name="author">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">댓글</label>
                        <textarea class="form-control" placeholder="Comment" rows="3" name="comment"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </section>
{{/article}}
{{>layouts/footer}}