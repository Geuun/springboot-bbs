{{>layouts/header}}
<div class="container mt-5">
    <h3>Korea Nationwide Hospital List</h3>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">병원명</th>
            <th scope="col">도로명주소</th>
        </tr>
        </thead>
        <tbody>
        {{#hospitals}}
            <tr>
                <th scope="row">{{id}}</th>
                <td><a href="/hospitals/{{id}}">{{hospitalName}}</a></td>
                <td>{{roadNameAddress}}</td>
            </tr>
        {{/hospitals}}
        </tbody>
    </table>
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
        <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
    </ul>
</div>
{{>layouts/footer}}